extends layout

block content
    br
    br
    h1 #{title}
    form(method='POST', action='/teachers/edit/'+ product._id)
        .form-group
            label Name : 
            input.form-control(name='name' type='text' , value=product.name)
        .form-group
            label Quantity : 
            input.form-control(name='quantity' type='text' , value=product.quantity)
        .form-group
            label Price : 
            input.form-control(name='price' type='text' , value=product.price)
        .form-group
            label Description : 
            input.form-control(name='description' type='text' , value=product.description)
        .form-group
            label Company : 
            input.form-control(name='company' type='text' , value=product.company)
        .form-group
            label Manufacture Date : 
            input.form-control(name='manDate' type='text' , value=product.manDate)
        .form-group
            label Expiry Date : 
            input.form-control(name='expDate' type='text' , value=product.expDate)
        input.btn.btn-primary(type='submit', value='Submit')